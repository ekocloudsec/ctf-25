<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Patient Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_patient_avatar_large"
                        android:layout_marginEnd="20dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewPatientName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre del Paciente"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/textViewPatientAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45 aÃ±os"
                            android:textSize="16sp"
                            android:textColor="@color/colorTextSecondary"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/textViewPatientId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: PAT001"
                            android:textSize="14sp"
                            android:textColor="@color/colorAccent"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/id_badge_background"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp" />

                    </LinearLayout>

                    <!-- Risk Level Indicator -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <View
                            android:id="@+id/riskIndicatorView"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/risk_indicator_background" />

                        <TextView
                            android:id="@+id/textViewRiskLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medio"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- System Information Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewSystemInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/textViewSystemInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="âœ… Paciente Registrado"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Medical Information -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ InformaciÃ³n MÃ©dica"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="16dp" />

                    <!-- Condition -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_medical_condition"
                            android:tint="@color/colorError"
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CondiciÃ³n"
                                android:textSize="12sp"
                                android:textColor="@color/colorTextSecondary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewCondition"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="HipertensiÃ³n arterial"
                                android:textSize="14sp"
                                android:textColor="@color/colorText"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Last Visit -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_calendar"
                            android:tint="@color/colorAccent"
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ãšltima Visita"
                                android:textSize="12sp"
                                android:textColor="@color/colorTextSecondary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewLastVisit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2024-10-01"
                                android:textSize="14sp"
                                android:textColor="@color/colorText"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Medication -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_medication"
                            android:tint="@color/colorPrimary"
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MedicaciÃ³n"
                                android:textSize="12sp"
                                android:textColor="@color/colorTextSecondary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewMedication"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enalapril 10mg"
                                android:textSize="14sp"
                                android:textColor="@color/colorText"
                                android:layout_marginTop="2dp"
                                android:textIsSelectable="true" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Emergency Contact -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_emergency"
                            android:tint="@color/colorError"
                            android:layout_marginEnd="12dp"
                            android:layout_gravity="center_vertical" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contacto de Emergencia"
                                android:textSize="12sp"
                                android:textColor="@color/colorTextSecondary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textViewEmergencyContact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+34 666 123 456"
                                android:textSize="14sp"
                                android:textColor="@color/colorText"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEmergencyCall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸš¨ Llamar"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    app:icon="@drawable/ic_phone"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSharePatient"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“¤ Compartir"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    app:icon="@drawable/ic_share"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
